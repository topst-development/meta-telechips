[Unit]
Description=Boot Animation
Before=systemd-journald.service systemd-udev-trigger.service systemd-udevd.service sysinit.target
DefaultDependencies=no

[Service]
Type=simple
CPUSchedulingPolicy=rr
EnvironmentFile=/etc/default/t-media-bootani
ExecStartPre=/sbin/modprobe vpu_4k_d2_lib
ExecStartPre=/sbin/modprobe vpu_4k_d2_dev
ExecStart=/usr/bin/basic_player_bootani /usr/share/boot-animation.mp4

[Install]
WantedBy=sysinit.target

